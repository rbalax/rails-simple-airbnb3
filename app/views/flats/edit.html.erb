<div class="container">
  <div class="row mt-3">
    <div class="col-5 m-auto mt-3" style="background-color: #F8F9FA">
      <h1>Edit Flat</h1>

      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.button :submit, { class: "btn btn-primary" }, label: "New Flat!"%>

      <% end %>
    </div>
  </div>
</div>
